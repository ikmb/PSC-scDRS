#========================================================================
#after installing BCFtools modify this address .scDRS/data/00-All.vcf.gz
#input:
# 	./scDRS/output/bcf_variants_PSC_WES_SingleMarkerPvalues.vcf
#	./scDRS/data/00-All.vcf.gz
# output:
#	./scDRS/output/bcf_variants_PSC_WES_SingleMarkerPvalues.vcf.gz
#	./scDRS/output/variants_with_rsID_PSC_WES_SingleMarkerPvalues.vcf
#========================================================================
##!/bin/bash
          
input_vcf="./scDRS/output/bcf_variants_PSC_WES_SingleMarkerPvalues.vcf"
output_vcf="./scDRS/output/bcf_variants_PSC_WES_SingleMarkerPvalues.vcf.gz"
annotated_vcf="./scDRS/output/variants_with_rsID_PSC_WES_SingleMarkerPvalues.vcf"

if [ -f "$input_vcf" ]; then
    bgzip $input_vcf
    bcftools index $output_vcf
    bcftools annotate -a ./scDRS/data/00-All.vcf.gz -c ID $output_vcf -o $annotated_vcf
else
    echo "File $input_vcf does not exist!"
fi 
